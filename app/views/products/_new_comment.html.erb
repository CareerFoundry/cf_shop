<% if signed_in? %>

	<h4>Add a review:</h4>
	<%= form_for([@product, @product.comments.build]) do |f| %>
	  <%#= render "shared/error_messages", :target => @comment %>

	  <p>
	    <%= f.label :body, "Comments" %><br>
	    <%= f.text_area :body %>
	  </p>
	  <p>
	    <%= f.label :rating %><br>
	    <%= f.text_field :rating, class: "rating" %>
	  </p>  
	  <p>
	    <%= f.submit "Submit" %>
	  </p>
	<% end %>

<% end %>	